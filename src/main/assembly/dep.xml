<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${jsw.assemble.dir}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*.zip</exclude>
                <exclude>slf4j-simple-1.5.6.jar</exclude>
                <exclude>maven-metadata-appassembler.xml</exclude>
            </excludes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${jsw.assemble.dir}/docker-sample-app/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*.zip</exclude>
                <exclude>slf4j-simple-1.5.6.jar</exclude>
                <exclude>maven-metadata-appassembler.xml</exclude>
            </excludes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/logs</directory>
            <outputDirectory>logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>wrapper.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>